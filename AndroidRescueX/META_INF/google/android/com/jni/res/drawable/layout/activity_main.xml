<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/kernel_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kernel Info: "/>

    <EditText
        android:id="@+id/zip_file_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ZIP file path"/>

    <Button
        android:id="@+id/flash_zip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flash ZIP"/>

    <EditText
        android:id="@+id/partition_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter partition to mount"/>

    <EditText
        android:id="@+id/mount_point_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter mount point"/>

    <Button
        android:id="@+id/mount_partition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mount Partition"/>

    <Button
        android:id="@+id/get_kernel_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Kernel Info"/>

</LinearLayout>
